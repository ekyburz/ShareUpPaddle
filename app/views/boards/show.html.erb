<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center mb-3">
  <%= link_to "Back to boards", root_path, class: "btn btn-primary mt-3" %>
</div>

<%= render "boards/board_details", board: @board %>

<div class="d-flex">
  <%# <%= link_to "Edit this board", edit_board_path(@board) | %>
  <% if user_signed_in? %>
    <div data-controller="toggle" class="mt-3 px-2">
      <button data-action="click->toggle#fire" class="btn btn-outline-primary">Update board</button>
      <div data-toggle-target="togglableElement" class="d-none mt-3">
        <%= render "form", board: @board %>
      </div>
    </div>
    <div data-controller="toggle" class="mt-3 px-2">
      <button data-action="click->toggle#fire" class="btn btn-outline-primary">New booking</button>
      <div data-toggle-target="togglableElement" class="d-none mt-3">
        "TEST"
      </div>
    </div>
    <div data-controller="toggle" class="mt-3">
      <%= link_to "New booking", new_booking_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>

  <%# <%= button_to "Destroy this board", @board, method: :delete %>
</div>
