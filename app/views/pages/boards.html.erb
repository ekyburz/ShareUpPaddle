
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><strong>My Boards</strong></h1>
  <%= link_to 'Go to previous page', user_profile_path, class: "btn btn-primary" %>
</div>

<% @boards.each do |board| %>
  <div class="card-details mb-3">
    <% board.photos.each do |photo| %>
      <%= cl_image_tag photo.key, crop: :fill %>
    <% end %>
    <div class="card-details-infos">
      <h3><%= board.name %></h3>
    </div>
    <div class="card-details-buttons p-3">
      <%= link_to 'Details', board, class: "btn btn-primary" %>
      <%= link_to 'Delete', board, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
