<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><strong>My Boards</strong></h1>
  <%= link_to 'Go to previous page', user_profile_path, class: "btn btn-primary" %>
</div>

<div class="card-details">
<img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h3><%= board.name %></h3>
  </div>
  <div class="buttons d-flex pb-3 pt-3">
    <%= link_to 'Details', board, class: "btn btn-primary" %>
    <%= link_to 'Delete', board_path(board), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light" %>
  </div>
</div>
<% end %>
<%= link_to "Back to Profile", user_profile_path, class: "btn btn-ghost" %>
