<h1>Profile Page</h1>

<div class="card-details profile-details">
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier" %>
  <div class="card-details-infos">
    <h2>User Info</h2>
    <p><%= @user.first_name %>  <%= @user.last_name %></p>
    <p><%= @user.email %></p>
  </div>
</div>
<%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-primary" %>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class:"btn btn-primary" %>

<div class="d-flex">
  <div data-controller="toggle" class="mt-3">
    <button data-action="click->toggle#fire", class="btn btn-primary">Add a new board</button>
    <div data-toggle-target="togglableElement" class="d-none">
      <%= render "boards/form", board: @board %>
    </div>
  </div>
  <div class="mt-3 mx-1">
    <%= link_to "My Boards", user_boards_path, class:"btn btn-primary" %>
  </div>
  <div class="mt-3 mx-1">
    <%= link_to "My Bookings", user_bookings_path, class:"btn btn-primary" %>
  </div>
</div>
